{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

<div class="form-group">
    <label for="fos_user_profile_form_username" class="required">
        {{ "form.username" | trans }}
    </label>
    {{ form_widget(form.username) }}
    {{ form_errors(form.username) }}
</div>

<div class="form-group">
    <label for="fos_user_profile_form_email" class="required">
        {{ "form.email" | trans }}
    </label>
    {{ form_widget(form.email) }}
    {{ form_errors(form.email) }}
</div>

<div class="form-group">
    <label for="fos_user_profile_form_current_password" class="required">
        {{ "form.current_password" | trans }}
    </label>
    {{ form_widget(form.current_password) }}
    {{ form_errors(form.current_password) }}
</div>

{{ form_rest(form) }}
<div class="actions">
    <a class="btn btn-secondary" href="{{ path("fos_user_profile_show") }}">
        <i class="fas fa-chevron-left"></i>
        {{ "actions.return" | trans({}, "messages") }}
    </a>
    <button class="btn btn-primary">
        <i class="far fa-save"></i>
        {{ 'profile.edit.submit'|trans }}
    </button>
</div>
{{ form_end(form) }}
