{% extends "NSCoreBundle::layout.html.twig" %}

{% block title %}{{ "homepage.index.head.title" | trans({}, "NSCoreBundle") }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="homepage container">
        {{ include("NSCoreBundle::messages.html.twig") }}

        <div class="jumbotron">
            <h1 class="display-4 text-center">{{ "homepage.index.titles.h1" | trans({}, "NSCoreBundle") }}</h1>
            <h2>{{ "homepage.index.titles.h2" | trans({}, "NSCoreBundle") | raw }}</h2>
            <p>{{ "homepage.index.description" | trans({}, "NSCoreBundle") | raw }}</p>
            <p>
                <a class="btn btn-primary btn-lg" href="https://github.com/nairus" role="button">
                    {{ "homepage.index.github-profile" | trans({}, "NSCoreBundle")}}
                    <i class="fas fa-external-link-alt"></i>
                </a>
            </p>
        </div>

        {% if lastNewsContentList |length > 0 %}
            <div class="last-news-container">
                <div class="card-deck">
                    {% for newsContent in lastNewsContentList %}
                        <div class="card border-secondary last-news-tile">
                            <h3 class="card-header text-secondary">{{ newsContent.title }}</h3>
                            <div class="card-body p-3">
                                <p class="card-text text-justify">{{ newsContent.description }}</p>
                                <a class="btn btn-primary"
                                   href="{{ newsContent.link }}"
                                   role="button">
                                    {{ "homepage.index.last-news-button" | trans({}, "NSCoreBundle")}}
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}