{# NSREsumeBundle:Resume:form.html.twig #}

{% trans_default_domain 'NSResumeBundle' %}

{% if not form.vars.valid %}
    <div id="global-errors-container" class="alert alert-danger fade show">
        <i class="fas fa-exclamation-triangle"></i>
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>{{ "flashes.error" | trans({}, 'messages') }}</strong> {{ "form.translations.errors" | trans }}
    </div>
{% endif %}

{{ form_start(form) }}

{{ form_widget(form) }}

<div class="row actions">
    <a href="{{ path('resume_index') }}" class="btn btn-secondary mx-1 my-1">
        <i class="fas fa-chevron-left"></i>
        {{ "actions.list" | trans({}, 'messages')}}
    </a>
    {% if not resume.isNew %}
        <a class="btn btn-secondary mx-1 my-1"
           href="{{ path('resume_show', { 'id': resume.id }) }}">
            <i class="far fa-eye"></i>
            {{ "actions.show" | trans({}, 'messages')}}
        </a>
    {% endif %}
    <button class="btn btn-primary mx-1 my-1" formnovalidate="formnovalidate">
        <i class="far fa-save"></i>
        {{ "actions.save" | trans({}, 'messages') }}
    </button>
    {{ form_end(form) }}
</div>