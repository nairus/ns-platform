{% extends 'NSCoreBundle::admin.html.twig' %}

{% block title %}{{ "skilllevel.show.title" | trans({"%id%": skillLevel.id}, "NSResumeBundle") }} - {{ parent() }}{% endblock %}

{% block ns_core_admin_body %}
    <div class="jumbotron">
        {{ include("NSCoreBundle::messages.html.twig") }}

        <h1>{{ "skilllevel.show.title" | trans({"%id%": skillLevel.id}, "NSResumeBundle") }}</h1>

        <div id="skilllevel-content" class="row">
            {% for translation in skillLevel.translations %}
                <div class="col-md-2 text-center p-2">
                    <img width="80" src="/bundles/nscore/img/flags/{{ translation.locale }}.png"></span>
                    {{ translation.title }}
                </div>
            {% endfor %}
        </div>

        <div class="row actions">
            <a class="btn btn-secondary mx-2 my-1" href="{{ path('skilllevel_index') }}">
                <i class="fas fa-chevron-left"></i>
                {{ "actions.list" | trans }}
            </a>
            <a class="btn btn-primary mx-2 my-1"
               href="{{ path('skilllevel_edit', { 'id': skillLevel.id }) }}">
                <i class="fas fa-pencil-alt"></i>
                {{ "actions.edit" | trans }}
            </a>
            {{ form_start(delete_form) }}
            <button class="btn btn-danger mx-2 my-1">
                <i class="fas fa-trash-alt"></i>
                {{ "actions.delete" | trans}}
            </button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
