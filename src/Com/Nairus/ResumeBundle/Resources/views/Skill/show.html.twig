{% extends 'NSCoreBundle::admin.html.twig' %}

{% block title %}{{ "skill.show.title" | trans({"%id%": skill.id}, "NSResumeBundle") }} - {{ parent() }}{% endblock %}

{% block ns_core_admin_body %}
    <div class="jumbotron">
        {{ include("NSCoreBundle::messages.html.twig") }}

        <h1>{{ "skill.show.title" | trans({"%id%": skill.id}, "NSResumeBundle") }}</h1>

        <div class="row">
            <strong>{{ "skill.show.label" | trans({}, "NSResumeBundle") | raw }}</strong>
            {{ skill.title }}
        </div>

        <hr>

        <div class="row actions">
            <a class="btn btn-secondary mx-2 my-1" href="{{ path('skill_index') }}">
                <i class="fas fa-chevron-left"></i>
                {{ "actions.list" | trans }}
            </a>
            <a class="btn btn-primary mx-2 my-1" href="{{ path('skill_edit', { 'id': skill.id }) }}">
                <i class="fas fa-pencil-alt"></i>
                {{ "actions.edit" | trans }}
            </a>
            {{ form_start(delete_form) }}
            <button class="btn btn-danger mx-2 my-1">
                <i class="fas fa-trash-alt"></i>
                {{ "actions.delete" | trans }}
            </button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
