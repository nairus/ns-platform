{# app/Ressources/TwigBundle/view/Exception:error.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="{{ _charset }}" />
        <title>{{ "errors.title"|trans({'%status_text%': status_text}, "messages", app.request.getLocale()) }}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="hero-unit center">
                        <div class="jumbotron">
                            <h1 class="text-center">
                                {{ "errors.error.subtitle.oops"|trans({}, "messages", app.request.getLocale()) }}
                                <small><font face="Tahoma" color="red">{{ "errors.error.subtitle.error"|trans({'%status_code%': status_code}) }}</font></small>
                            </h1>
                        </div>
                        <h2>{{ "errors.error.shortdescription"|trans({'%status_text%': status_text, '%status_code%': status_code}, "messages", app.request.getLocale()) }}</h2>

                        <p>
                            {{ "errors.error.description"|trans({}, "messages", app.request.getLocale()) }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>