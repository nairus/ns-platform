{# app/Ressources/TwigBundle/view/Exception:error401.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="{{ _charset }}" />
        <title>{{ "errors.title"|trans({'status_text': status_text}, "messages", app.request.getLocale()) }}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="hero-unit center">
                        <div class="jumbotron">
                            <h1 class="text-center">
                                {{ "errors.error401.subtitle.unauthorized"|trans({}, "messages", app.request.getLocale()) }}
                                <small>
                                    <font face="Tahoma" color="red">{{ "errors.error401.subtitle.error"|trans({}, "messages", app.request.getLocale()) }}</font>
                                </small>
                            </h1>
                        </div>
                        <p>{{ "errors.error401.description"|trans({}, "messages", app.request.getLocale())|raw }}</p>
                        <p><b>{{ "errors.error401.alttext"|trans({}, "messages", app.request.getLocale()) }}</b></p>
                        <a id="home-link" href="{{ path('ns_core_homepage', {"_locale": app.request.getLocale()}) }}" class="btn btn-large btn-info">
                            <i class="icon-home icon-white"></i> {{ "errors.takemehome"|trans({}, "messages", app.request.getLocale()) }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>